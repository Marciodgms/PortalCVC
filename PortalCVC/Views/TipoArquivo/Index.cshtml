@model IEnumerable<PortalCVC.Models.tb_tipoarquivo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<section class="content-header">
    <h1>
        Tipo de arquivo
        <small>Listagem de todos os tipos de arquivos</small>
    </h1>
    <ol class="breadcrumb">

        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Tipo de arquivo</li>
    </ol>
</section>
<br />
<div class="row col-md-12 btn-add">
    <a href="@Url.Action("Cadastrar","TipoArquivo")" class="btn btn-primary pull-right" title="Cadastrar novo"><i class="fa fa-plus"></i></a>
</div>
<br />
<br />
<div class="box">
    <table id="lstTipoArquivos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Código</th>
                <th>Tipo do arquivo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Tipo</td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Editar/" + item.Id.ToString(),"TipoArquivo")" class="icone-editar"><i class="fa fa-edit"></i></a>
                        <a class="icone-remover" href="@Url.Action("Remover/" + item.Id,"TipoArquivo")"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#lstTipoArquivos').DataTable({
            "paging": true,
            "ordering": true,
            "bFilter": false,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Portuguese-Brasil.json"
            }
        });
    });
</script>