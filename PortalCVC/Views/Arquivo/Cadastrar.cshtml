@model PortalCVC.Models.tb_arquivo

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<section class="content-header">
    <h1>
        Cadastrar arquivos
        <small>Página de cadastro de arquivos para os empreendimentos</small>
    </h1>
    <ol class="breadcrumb">

        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class=""><a href="@Url.Action("Index","Arquivo")">Arquivos</a></li>
        <li class="active">Cadastrar</li>
    </ol>
</section>
<br />
<div class="box">
    <div class="box-body">
        <form asp-action="Cadastrar" enctype="multipart/form-data">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Empreendimento</label>

                            <select asp-for="EmpreendimentoFK" class="form-control">
                                @foreach (var item in ViewBag.lstEmpreendimentos)
                                {
                                    <option value="@item.Id"> @item.Nome </option>
                                }
                            </select>
                            <span asp-validation-for="EmpreendimentoFK" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Tipo do arquivo</label>

                            <select asp-for="TipoArquivoFK" class="form-control">
                                @foreach (var item in ViewBag.lstTipos)
                                {
                                    <option value="@item.Id"> @item.Tipo </option>
                                }
                            </select>
                            <span asp-validation-for="TipoArquivoFK" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Descrição:</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SRC" class="control-label"></label>
                            <input type="file" name="files" class="form-control"  accept="image/png, image/jpeg, application/pdf" multiple/>
                            <span asp-validation-for="SRC" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-danger pull-right" href="@Url.Action("Index","Arquivo")">CANCELAR</a>
                        <input type="submit" class="pull-right btn btn-primary" value="CADASTRAR" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div>
</div>

