@model IEnumerable<PortalCVC.ViewModel.ArquivoViewModel>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Main.cshtml";
}

<section class="content-header">
    <h1>
        Arquivos
        <small>Listagem de todos os empreendimentos</small>
    </h1>
    <ol class="breadcrumb">

        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Arquivos</li>
    </ol>

</section>
<br />
<div class="row col-md-12 btn-add">
    <a href="@Url.Action("Cadastrar","Arquivo")" class="btn btn-primary pull-right" title="Adicionar Novo"><i class="fa fa-plus"></i></a>
</div>
<br />
<br />
<div class="box">
    <table id="lstArquivos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Código</th>
                <th>Tipo do arquivo</th>
                <th>Empreendimento</th>
                <th>Nome</th>
                <th>ARQUIVO</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TipoDoArquivo</td>
                    <td>@item.Empreendimento</td>
                    <td>@item.Nome</td>
                    <td>@item.FileName</td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Editar/" + item.Id.ToString(),"Arquivo")" class="icone-editar"><i class="fa fa-edit"></i></a>
                        <a class="icone-remover" href="@Url.Action("Deletar/" + item.Id,"Arquivo")"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#lstArquivos').DataTable({
            "paging": true,
            "ordering": true,
            "bFilter": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Portuguese-Brasil.json"
            }
        });
    });
</script>